@using Microsoft.AspNetCore.Components.Web
@using AnimeRatings.Website.Services
@using AnimeRatings.Website.Models
@inject JsonFileAnimesService AnimesService

<div class="card-columns">
    @foreach (var anime in AnimesService.GetAnimes())
    {
        <div class="card">
            <div class="card-img" style="background-image: url('@anime.Image');"> 

            </div>
            <div class="card-body">
                <h5 class="card-title">@anime.Title</h5>
            </div>        
        <div class="card-footer">
                <small class="text-muted">
                <button @onclick="(e=> SelectAnime(anime?.Id ?? string.Empty))"
                            data-bs-toggle="modal" data-bs-target="#animeModal" class="btn btn-primary">
                        More Info
                    </button>
            </small>
        </div>
        </div>
    }
        </div>


    <div class="modal fade" id="animeModal" tabindex="-1" role="dialog" aria-labelledby="animeTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
        @if (selectAnime != null)
        {
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="animeTitle">@selectAnime.Title</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>              
                <div class="modal-body">                    
                    <div class="card">
                        <div class="card-img" style="background-image: url('@selectAnime.Image');"></div>
                        <div class="card-body">
                            <p class="card-text">@selectAnime.Description</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @if (voteCount == 0)
                    {
                    <p>Be the first to rate this anime!</p>
                    }
                    else
                    {
                        <span>@currentRating.ToString("0.0")/5 (@voteCount @voteLabel)</span> <!-- Display the average rating out of 5 -->
                    }
                    @for (int i = 1; i <= 5; i++)
                    {
                        var currentStar = i;
                        <span class="@(i <= currentRating ? "fa fa-star checked" : "fa fa-star-o")" @onclick="(e => SubmitRating(currentStar))"></span>
                    }
                </div>
            </div>          
        }
     </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@code   
{
    Anime? selectAnime;
    string? selectAnimeId;
    double currentRating = 0;
    int voteCount = 0;
    string? voteLabel;

    void SelectAnime(string animeId)
    {
        selectAnimeId = animeId;
        selectAnime = AnimesService.GetAnimes().FirstOrDefault(x => x.Id == animeId); 
        //Console.WriteLine($"Selected Anime: {selectAnime.Title}");
        //Console.WriteLine($"Image URL: {selectAnime.Image}");
        GetCurrentRating();
    }



    void GetCurrentRating()
    {
        if (selectAnime?.Ratings == null || !selectAnime.Ratings.Any())
        {
            currentRating = 0;
            voteCount = 0;
            voteLabel = "Votes";

        }
        else
        {
            voteCount = selectAnime.Ratings.Length;
            currentRating = (double)selectAnime.Ratings.Sum() / voteCount;
            voteLabel = voteCount > 1 ? "Votes" : "Vote";
        }

        StateHasChanged();
    }

    void SubmitRating(int rating)
    {
        if (selectAnimeId != null)
        {
            AnimesService.AddRating(selectAnimeId, rating);
            selectAnime = AnimesService.GetAnimes().First(x => x.Id == selectAnimeId); // Re-fetch the updated anime data
            GetCurrentRating();
            StateHasChanged();
        }
    }
}